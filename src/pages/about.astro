<Layout
	title="About Us"
	description="The people behind SimpleRegs"
	pubDate={new Date("October 15, 2023")}
	heroImage={`${import.meta.env.BASE_URL}/team.jpg`}
>
  <style>
    .team-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 20px;
      padding: 20px;
    }
    .team-member {
      text-align: center;
    }
    .team-member img {
      border-radius: 50%;
      width: 100px; 
      height: 100px; 
      object-fit: cover;
    }
    .name {
      font-weight: bold;
      margin-top: 10px;
      color: #000000; 
    }
    .title {
      color: #757575;
    }
    .subtitle {
      font-style: italic;
      color: #757575;
    }
  </style>

</Layout>


