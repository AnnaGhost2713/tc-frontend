---
import HeaderLink from './HeaderLink.astro';
import { Image } from 'astro:assets';
import logo from '../img/logo.png'
---

<header>
    <nav>
        <a href="/">
            <Image src={logo} alt="SimpleRegs"/>
        </a>
        <div class="internal-links">
            <HeaderLink href="/">Explore</HeaderLink>
            <HeaderLink href="/regulations">Regulations</HeaderLink>
            <HeaderLink href="/template">Template</HeaderLink>
            <HeaderLink href="/about">About Us</HeaderLink>
        </div>

        <div class="search">
            <form action="/search" method="GET">
                <input type="search" placeholder="Search..."/>
            </form>
        </div>

        <div class="user">
            <a href="/login">Login</a>
            <a href="/signup">Sign Up</a>
        </div>
    </nav>
</header>
<style>
    header {
        margin: 0;
        padding: 0 1em;
        background: white;
        box-shadow: 0 2px 8px rgba(var(--black), 5%);
    }

    h2 {
        margin: 0;
        font-size: 1em;
    }

    h2 a,
    h2 a.active {
        text-decoration: none;
    }

    nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    nav a {
        padding: 1em 0.5em;
        color: var(--black);
        border-bottom: 4px solid transparent;
        text-decoration: none;
    }

    nav a.active {
        text-decoration: none;
        border-bottom-color: var(--accent);
    }

    .social-links,
    .social-links a {
        display: flex;
    }

    @media (max-width: 720px) {
        .social-links {
            display: none;
        }
    }
</style>
