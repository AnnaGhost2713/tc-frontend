---
import HeaderLink from "./HeaderLink.astro";
import { Image } from "astro:assets";
import logo from "../img/logo.png";
import Button from "./Button.astro";
---

<header class="bg-white px-4">
    <nav class="flex items-center justify-between">
        <a href=`${import.meta.env.BASE_URL}`>
            <Image src={logo} alt="SimpleRegs" class="max-w-[200px] p-3" />
        </a>
        <div class="internal-links text-base">
            <HeaderLink href=`${import.meta.env.BASE_URL}/`>Explore</HeaderLink>
            <HeaderLink href=`${import.meta.env.BASE_URL}/assistant`>
                AI Assistant
            </HeaderLink>
            <HeaderLink href=`${import.meta.env.BASE_URL}/blog`>
                Regulations Blog
            </HeaderLink>
            <HeaderLink href=`${import.meta.env.BASE_URL}/template`>
                Templates
            </HeaderLink>
            <HeaderLink href=`${import.meta.env.BASE_URL}/about`>
                About Us
            </HeaderLink>
        </div>
        <div class="user">
            <Button><span class="text-base">Login</span></Button>
            <Button>
                <span class="text-base">Sign Up</span>
            </Button>
        </div>
    </nav>
</header>
<style>
    header {
        box-shadow: 0 2px 8px rgba(var(--black), 5%);
    }

    nav a {
        padding: 0em 0.5em;
        color: var(--black);
        border-bottom: 4px solid transparent;
    }

    nav a.active {
        text-decoration: none;
        border-bottom-color: var(--accent);
    }
</style>
